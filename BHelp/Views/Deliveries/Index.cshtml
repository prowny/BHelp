                @Html.DisplayFor(modelItem => item.FullBags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HalfBags)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KIdSnacks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiftCards)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
