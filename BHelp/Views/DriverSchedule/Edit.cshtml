@model BHelp.ViewModels.DriverScheduleViewModel
@using System.Collections
@using System.Web.Mvc.Html
@using Org.BouncyCastle.Utilities
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        #schedule {
            border-collapse: collapse;
            border: thin solid black
        }

        .top {
            width: 175px;
            border-right: thin solid black;
        }

        #SaveButton {
            background-color: blue;
            color: white
        }
    </style>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <link rel="stylesheet" href="~/Content/themes/base/jquery-ui.min.css" /> @*// for date-picker*@
    <script src="@Url.Content("/Scripts/BHelpFunctions.js")"></script>
    <link rel="icon" href="~/images/bhlogo.ico" type="image/x-icon" />
</head>
<body>
    @using (Html.BeginForm("Edit", "DriverSchedule", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div>
            <table>
                <tr>
                    <td>Date:</td>
                    <td>Driver:</td>
                    <td>Backup Driver:</td>
                    <td>Notes:</td>
                </tr>
                <tr>
                    <td>
                        @Html.TextBox("Date", @Model.Date, "{0:MM/dd/yyyy}",
                            new { @class = "form-control", id = "BoxDate", style = "width: 75px;" })
                        <span style="color: darkmagenta">&#8592;Click to change</span> @*Html left-arrow*@
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.DriverId,
                            new SelectList((IEnumerable)Model.DriverList,
                                "Value", "Text"),
                            new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DriverId, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.BackupDriverId,
                            new SelectList((IEnumerable)Model.BackupDriverList,
                                "Value", "Text"),
                            new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.BackupDriverId, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.TextAreaFor(t => t.Note)
                    </td>
                    <td>
                        <input type="submit" value="Save" class="btn btn-default" id="SaveButton"/>
                    </td>
                </tr>
            </table>
            <hr />
        </div>
        <div>
            <table>
                <tr>
                    @{ var DateData = @Session["DriverScheduleMonthYear"].ToString(); }
                    @{ var month = Convert.ToInt32(DateData.Substring(0, 2)); }
                    @{ var year = Convert.ToInt32(DateData.Substring(2, 4)); }
                    @{ var tempDate = new DateTime(year, month, 1); }
                    @{ var monthName = Strings.ToUpperCase(tempDate.ToString("MMMM")); }
                    <td><b>Bethesda Help Drivers Schedule - @monthName&nbsp;@year</b></td>
                    <td>
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @Html.ActionLink(" Previous Month", "PreviousMonth", new { @month, @year })
                    </td>
                    <td>&nbsp;&nbsp;@Html.ActionLink(" Next Month", "NextMonth", new { @month, @year })</td>
                    <td>&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Return to Dashboard", "Index", "Home")</td>
                </tr>
            </table>
        </div>
        <div>
            <table Id="schedule">
                <tr>
                    <th class="top">MONDAY</th>
                    <th class="top">TUESDAY</th>
                    <th class="top">WEDNESDAY</th>
