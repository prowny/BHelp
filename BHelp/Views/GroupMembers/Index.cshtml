@using FormMethod = System.Web.Mvc.FormMethod
@model BHelp.ViewModels.GroupMemberViewModel
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="@Url.Content("/Scripts/BHelpFunctions.js")"></script>
</head>
<body>
    <span><b>Maintain Group Members</b></span>
    <br/>
    <div id="GroupNameDiv">
        @using (Html.BeginForm("Index", "GroupMembers", FormMethod.Post))
        {
            <table class="table">
                <tr>
                    <td>
                        @Html.DropDownList("selectGroupDDL", Model.GroupNameSelectList
                            , "-Select Group-")
                    </td>
                </tr>
            </table>
        }
    </div>

    <div id="GroupMembersDiv" style ="display:none">
        <table>
            <tr>
                <td>
                    @Html.DropDownList("selectMembersDDL", new SelectList(string.Empty,
                        "Value", "Text"), new { size = 10 })
                </td>
                <td>
                    <b>&nbsp;&nbsp;@Html.Label("Add Member: ") </b>
                    @Html.DropDownList("selectClientDDL", Model.AllClients)
                </td>

            </tr>
        </table>
    </div>
    <br/>
    <div>
        @Html.ActionLink("Return To Dashboard", "ReturnToDashboard")
    </div>
</body>
</html>

<script type="text/javascript">
    $(function () {
        window.$('#selectGroupDDL').change(function () {
            var _gpId = window.$(this).val();
            window.location.href = '@Url.Action("MaintainGroupMembers",
                                        "GroupMembers")' + '?groupId=' + _gpId;
        });
    });
</script>
