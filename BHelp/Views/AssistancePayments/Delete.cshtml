@model BHelp.ViewModels.AssistanceViewModel
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>AssistancePayment</h4>
        <hr />
        <table>
            <tr>
                <td>Client:&nbsp;</td>
                <td>
                    @Html.DisplayFor(model => model.LastName),
                    @Html.DisplayFor(model => model.FirstName)
                </td>
            </tr>
            <tr>
                <td>Action:&nbsp;</td>
                <td> @Html.DisplayFor(model => model.Action)</td>
            </tr>
            <tr>
                <td>Payee:&nbsp;</td>
                <td> @Html.DisplayFor(model => model.Payee)</td>
            </tr>
            <tr>
                <td>Amount:&nbsp;</td>
                <td> @Html.DisplayFor(model => model.StringDollarAmount)</td>
            </tr>
            <tr>
                <td>Note:&nbsp;</td>
                <td> @Html.DisplayFor(model => model.Note)</td>
            </tr>
        </table>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div>
                <br/>
                <input type="submit" value="Delete" class="btn btn-default"/>
            </div>
            <div>
                <br />
                @Html.ActionLink("Back to List", "Index")
                <br />
                @Html.ActionLink("Return to Dashboard", "Index", "Home", new { }, null)
            </div>
        }
    </div>
</body>
</html>
