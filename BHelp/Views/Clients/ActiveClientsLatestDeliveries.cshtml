@using BHelp.ViewModels
@{ Layout = null; }
<!DOCTYPE html>
@model List<BHelp.ViewModels.DeliveryViewModel> 
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ActiveClientsLatestDeliveries</title>
    <link rel="icon" href="~/images/bhlogo.ico" type="image/x-icon" />
</head>
<body>
<table>
    <tr>
        <td><b>Active Clients Latest Deliveries</b></td>
        <td>&nbsp;by oldest date first (@Model.Count)</td>
        <td>&nbsp;@Html.ActionLink("Return to Reports Menu", "ReturnToReportsMenu", "Deliveries")</td>
        <td>&nbsp;&nbsp;@Html.ActionLink("Return to Dashboard", "Index", "Home")</td>
    </tr>
</table>
<table>
    <tr>
        <td><b>Delivery Date</b></td>
        <td><b>Last Name</b></td>
        <td><b>First Name</b></td>
        <td><b>Address</b></td>
        <td></td>
    </tr>
    @for(int i = 0; i < Model.Count; i++ )
    {
        <tr>
            <td style="text-align: center">@Model[i].DateDeliveredString</td>
            <td>@Model[i].LastName</td>
            <td>@Model[i].FirstName</td>
            <td>@Model[i].StreetNumber&nbsp;@Model[i].StreetName&nbsp;
                @Model[i].City&nbsp;@Model[i].Zip</td>
            <td>
                @Html.ActionLink("Edit","Edit",new{id = Model[i].ClientId})
            </td>
        </tr>
    }
</table>
<br/>
<div>
    @Html.ActionLink("Download to CSV File", "ActiveClientsLatestDeliveriesToCSV", "Clients")
    <br />
    @Html.ActionLink("Return to Reports Menu", "ReturnToReportsMenu", "Deliveries")
    <br />
    @Html.ActionLink("Return to Dashboard", "Index", "Home", new { }, null)
</div>
</body>
</html>
