@model BHelp.Models.Document
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <style>
        #btnSave {background-color: blue;color: white}
    </style>
    <link rel="icon" href="~/images/bhlogo.ico" type="image/x-icon" />
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h4>Edit Document @Model.FileName</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor( model => model.Title,  new { @class = "form-control", style = "width: 400px" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MenuCategory, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.DropDownListFor(m => m.MenuCategory,
                    new SelectList(Model.Categories, "Value", "Text"),
                    new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MenuCategory, "", new { @class = "text-danger" })
                <span style="color: darkmagenta"> &nbsp;(Who gets permission to see this document)</span>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id ="btnSave" type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }
    <br/>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<div>
    @Html.ActionLink("Return to Dashboard", "Index", "Home", new { }, null)
</div>
</body>
</html>
