@model BHelp.Models.ApplicationUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <style>
        p.indent {
            padding-left: 1em
        }
        div {
            padding-left: 10px
        }
    </style>
</head>
<body>

<div>
    <table>
        <tr>
            <td>&nbsp;&nbsp; Welcome  @User.Identity.Name!</td>
        </tr>
        <tr>
            <td>
                <p style="text-decoration:underline" class="indent"><strong>Bethesda Help Food Delivery Program Dashboard</strong></p>
            </td>
        </tr>
    </table>
</div>

<div>
    <strong>Developer Menu</strong><br />
    <a href="@Url.Action("UploadClients", "Home")">Upload Clients Utility</a><br />
    <a href="@Url.Action("UploadAdults", "Home")">Upload Adults Utility</a><br />
    <a href="@Url.Action("ReverseNames", "Home")">Reverse First & Last Names</a><br />
    <br/>
</div>

<div>
    <strong>Staff Menu</strong><br />
    <a href="@Url.Action("Index", "Clients")">Maintain Clients (Head of Household)</a><br />
    <a href="@Url.Action("Index", "FamilyMembers")">Maintain Household Members (Family)</a><br />
    <a href="@Url.Action("Index", "Household")">Maintain Households</a><br />
    <a href="@Url.Action("Index", "Deliveries")">Maintain Deliveries</a><br />
</div>
<br />
<div>
    <strong>Officer of the Day Menu</strong><br />
    <a href="@Url.Action("Index", "OD")">Call Log - OD Section</a><br />
</div>
<br />
<div>
    @Html.AntiForgeryToken()
    <a href="@Url.Action("Logout", "Home")">LogOut</a>
</div>

</body>
</html>
