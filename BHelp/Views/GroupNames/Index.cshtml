@model BHelp.ViewModels.GroupNameViewModel
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="icon" href="~/images/bhlogo.ico" type="image/x-icon" />
</head>
<body>
    <p>
        @Html.ActionLink("Create New Client Group Name", "Create")
    </p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Name)</th>
        <th>C Bag Delivery</th>
    </tr>
    
    @foreach (var item in Model.GroupNameList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style ="text-align: center">
                @Html.DisplayFor(modelItem => item.CBagDelivery)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<table>
    <tr></tr>
    <tr>
        <td>
            @Html.ActionLink("Return to Dashboard", "Index", "Home", new { }, null)        
        </td>
    </tr>
</table>
</body>
</html>
