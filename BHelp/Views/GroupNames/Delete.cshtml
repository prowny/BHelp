@model BHelp.ViewModels.GroupNameViewModel
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <style >
        #btnDelete {background-color: white;color: red}
    </style>
</head>
<body>
    <h4>Are you sure you want to delete this? (and all group members)</h4>
    <div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name):&nbsp;
                @Html.DisplayFor(model => model.Name)
            </dt>
        </dl>
    
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
    
            <div>
                <input type="submit" value="Delete" class="btn btn-default" id="btnDelete"/>
            </div>
            <br/>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</body>
</html>
