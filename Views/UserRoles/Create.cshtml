@model BHelp.ViewModels.AddEditUserRolesViewModel
@{ Layout = null; }
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
        
    <div class="form-horizontal">
        <h4>Role</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <table>
                <tr>
                    <td><strong>User:</strong></td>
                    <td>                    
                        @Html.DropDownListFor(x => Model.User.Id, new SelectList(Model.Users, "Value", "Text"))
                        @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr><td></td></tr>
                <tr>
                    <td><strong>Role:</strong></td>
                    <td>
                        @Html.DropDownListFor(m => m.UserRole.Id, new SelectList(Model.UserRoles, "Value" , "Text"))
                        @Html.ValidationMessageFor(model => model.UserRole, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div> 
        
        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
</body>
</html>